    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            
            "pathMappings": {
                "/phpmail": "c:/wamp/www/alspok/phpmail",
                // "/var/www/html": "c:/wamp/www/alspok/phpMail",
                // "/phpmail": "${workspaceRoot}/phpmail"
              },
            "port": 9090
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}